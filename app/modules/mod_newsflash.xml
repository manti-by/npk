<?xml version="1.0" encoding="windows-1251"?>
<mosinstall type="module" version="1.0.0">
	<name>Newsflash</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>Модуль показывает в случайном порядке одну из опубликованных статей из категории при каждой перезагрузке страницы.
   Еще может показывать множественные материалы в горизонтальном или вертикальном расположении.</description>
	<files>
		<filename module="mod_newsflash">mod_newsflash.php</filename>
	</files>
	<params>
		<param name="catid" type="mos_category" default="0" label="Категория" description="Категория с материалами" />
		<param name="style" type="list" default="random" label="Стиль" description="Стиль показа категории">
		    <option value="random">Случайный выбор одной из...</option>
		    <option value="horiz">Горизонтально</option>
		    <option value="vert">Вертикально</option>
		</param>
		<param name="image" type="radio" default="0" label="Показывать картинки" description="Показывать материал с картинками">
			<option value="1">Да</option>
			<option value="0">Нет</option>
		</param>
		<param name="link_titles" type="list" default="" label="Заголовки как ссылки" description="Зделать заголовки ссылками">
			<option value="">Глобальные настройки</option>
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
        <param name="readmore" type="radio" default="0" label="Подробнее..." description="Показать/Спрятать кнопку -Подробнее-">
            <option value="0">Спрятать</option>
            <option value="1">Показать</option>
        </param>
        <param name="item_title" type="list" default="0" label="Заголовок" description="Показывать заголовок объекта">
                <option value="0">Нет</option>
                <option value="1">Да</option>
        </param>
		<param name="items" type="text" default="" label="Количество объектов для показа" description="Количество объектов для показа" />
		<param name="cache" type="radio" default="0" label="Разрешить кэш" description="Разрешить кеширование контента для этого модуля">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
		<param name="moduleclass_sfx" type="text" default="" label="Суффикс класа CSS модуля" description="Суффикс для добавления к классу CSS модуля (table.moduletable), для индивидуальной настройки модуля." />
	</params>
</mosinstall>
