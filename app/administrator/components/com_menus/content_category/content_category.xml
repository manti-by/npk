<?xml version="1.0" encoding="windows-1251"?>
<mosinstall type="menu" version="1.0.0">
	<name>Таблица - материалы категории</name>
	<group>Content</group>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>Показывает таблицу материалов в категории</description>
	<params>
		<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Иконка меню" description="Маленькая иконка для размещения слева или справа от пункта меню, файл должен быть в images/stories/" />
		<param name="page_title" type="radio" default="1" label="Текст заголовка страницы" description="Спрятать/Показать заголовок страницы">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="pageclass_sfx" type="text" size="20" default="" label="Суффикс класса CSS" description="Суффикс, прибавляемый к имени класса CSS страницы для индивидуальной настроки" />
		<param name="back_button" type="list" default="" label="Кнопка -Назад-" description="Спрятать/Показать кнопку -Назад-, которая возвращает на предыдущую страницу">
			<option value="">Использовать общие настройки</option>
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="description_cat" type="radio" default="1" label="Описание категории" description="Спрятать/Показать описание категории">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="description_cat_image" type="radio" default="1" label="Картинка описания категории" description="Спрятать/Показать картинку описания категории">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>		
		<param name="orderby" type="list" default="" label="Сортировать по..." description="Определяет порядок сортировки объектов">
			<option value="">По умолчанию</option>
			<option value="date">Старые первыми</option>
			<option value="rdate">Последние первыми</option>
			<option value="alpha">Заголовок А - Я</option>
			<option value="ralpha">Заголовок Я - А</option>
			<option value="author">По автору А - Я</option>
			<option value="rauthor">По автору Я - А</option>
			<option value="hits">Хиты по убыванию</option>
			<option value="rhits">Хиты по возрастанию</option>
			<option value="order">Сортировать</option>
		</param>
		<param name="date_format" type="text" size="15" default="" label="Формат даты" description="Формат отображения даты, используется PHP strftime форматирование - если оставить пустым, формат будет загружен из языкового файла" />
		<param name="date" type="list" default="" label="Колонка даты" description="Показать/Спрятать колонку даты">
			<option value="">Использовать общие настройки</option>
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="author" type="list" default="" label="Колонка автора" description="Показать/Спрятать колонку автора">
			<option value="">Использовать общие настройки</option>
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="hits" type="list" default="" label="Колонка хитов" description="Показать/Спрятать колонку хитов">
			<option value="">Использовать общие настройки</option>
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="headings" type="radio" default="1" label="Заголовки таблиц" description="Спрятать/Показать заголовки таблиц">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="navigation" type="radio" default="1" label="Панель навигации" description="Показать/Спрятать панель навигации">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="order_select" type="radio" default="1" label="Порядок сортировки" description="Показать/Спрятать выпадающий список сортировки">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="display" type="radio" default="1" label="Выбор для показа" description="Показать/Спрятать выпадающий список выбора для показа">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="display_num" type="list" default="50" label="Сколько строк" description="Количество строк для показа по умолчанию">
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="50">50</option>
		</param>
		<param name="filter" type="radio" default="1" label="Фильтрr" description="Показать/Спрятать окно фильтра">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="filter_type" type="list" default="title" label="Поле фильтра" description="По какому полю применять фильтр">
			<option value="title">Заголовок</option>
			<option value="author">Автор</option>
			<option value="hits">Хиты</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="other_cat" type="radio" default="1" label="Другие категории" description="Показать/Спрятать список других категорий">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="empty_cat" type="radio" default="0" label="Пустые категории" description="Спрятать/Показать пустые (без материалов) категории">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="cat_items" type="radio" default="1" label="# объектов в категории" description="Спрятать/Показать количество объектов внутри категории">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="cat_description" type="radio" default="1" label="Описание категории" description="Спрятать/Показать описание категории">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
 		<param name="unpublished" type="radio" default="1" label="Неопубликованные" description="Показать/Спрятать неопубликованные материалы пользователям со статусом -Publisher- и выше">
			<option value="0">Спрятать</option>
			<option value="1">Показать</option>
 		</param>
	</params>
</mosinstall>